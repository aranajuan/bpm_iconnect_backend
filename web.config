<?xml version="1.0" encoding="UTF-8"?>
<configuration>
 <system.webServer>
    <security>
         <requestFiltering>
            <!-- only allow GET,POST verbs -->
            <verbs allowUnlisted="false" applyToWebDAV="true">
               <add verb="GET" allowed="true" />
               <add verb="POST" allowed="true" />
            </verbs>
                <hiddenSegments>
                    <add segment="actions" />
                    <add segment="services" />
                    <add segment="utils" />
                    <add segment="classes" />
                    <add segment="config" />
                </hiddenSegments>
         </requestFiltering>
      </security>
 </system.webServer>
</configuration> 

